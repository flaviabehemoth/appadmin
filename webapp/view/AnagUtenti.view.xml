<mvc:View height="100%" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Admin.appadmin.controller.AnagUtenti" xmlns:semantic="sap.m.semantic" displayBlock="true" xmlns:f="sap.ui.layout.form">
    <SplitContainer>
        <masterPages>
            <semantic:MasterPage title="Utenti" id="semanticMasterPage" visible="true" enableScrolling="true">
                <List id="list" items="{
                    path: '/Anagrafica_Utenti',
                    sorter: {
                        path: 'ID_UTENTE',
                        descending: true
                    }
                }" growing="true" growingScrollToLoad="true" visible="true">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <ToolbarSpacer />
                                <SearchField id="searchField" width="70%" placeholder="searchfield" search="onSearch" />
                                <!-- <Button
											id="refreshUsersButton"
											icon="sap-icon://refresh"
											tooltip="{i18n>refreshButtonText}"
											press=".onRefresh"
                                           /> -->
                                <Button id="sortUsersButton" icon="sap-icon://sort" tooltip="hello" press="onSorters" />

                                <Button icon="sap-icon://add" id="addBtnUtenti" press="add" />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <items>
                        <ObjectListItem id="ObjectListItem" type="Navigation" press="onSelectionChange" title="{COGNOME_UTENTE} {NOME_UTENTE}" intro="ID:{ID_UTENTE}">
                            <ObjectAttribute title="{ID_RUOLO_ID_RUOLO}{TELEFONO_UTENTE}{EMAIL_UTENTE}" visible="false" />
                        </ObjectListItem>
                    </items>
                </List>

                <semantic:landmarkInfo>
                    <PageAccessibleLandmarkInfo rootLabel="Root label" headerLabel="Header label" footerLabel="Footer label" />
                </semantic:landmarkInfo>
                <!-- <semantic:sort>
                    <semantic:SortSelect change="onSemanticSelectChange" items="{
							path: '/Anagrafica_Utenti',
							sorter: { path: 'COGNOME_UTENTE' }
							}">
                        <core:Item key="/Anagrafica_Utente" text="/Anagrafica_Utente" />
                    </semantic:SortSelect>
                </semantic:sort> -->
               <semantic:filter>
					<semantic:FilterSelect change="onSemanticSelectChange"
										 items="{
							path: '/Anagrafica_Ruoli',
							filter: { path: 'ID_RUOLO'}
							}">
						<core:Item key="cia" text="{ID_RUOLO}"/>
					</semantic:FilterSelect>
				</semantic:filter>

                <!-- <semantic:multiSelectAction>
                    <semantic:MultiSelectAction press="onMultiSelectPress" />
                </semantic:multiSelectAction> -->
            </semantic:MasterPage>
        </masterPages>
        <detailPages>
            <semantic:DetailPage title="Dettaglio Utente" id="detail">
                <f:SimpleForm
                    id="SimpleFormDisplay354wide"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title=""
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label text="id" />
                        <Input id="id" value="{ID_UTENTE}" editable="false" />

                        <Label text="cognome" />
                        <Input id="cognome" value="{COGNOME_UTENTE}" editable="false" />

                        <Label text="nome" />
                        <Input id="nome" value="{NOME_UTENTE}" editable="false" />
                        


                       <Label text="ruolo" />
                       <Input id="ruolo" value="{ID_RUOLO_ID_RUOLO}" editable="false" />

                        <Label text="email" />
                        <Input id="email" value="{EMAIL_UTENTE}" editable="false" />

                        <Label text="telefono" />
                        <Input id="telefono" value="{TELEFONO_UTENTE}" editable="false" />
                    </f:content>
                </f:SimpleForm>

                <f:SimpleForm
                    id="SimpleFormDisplay354wideAdd"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title=""
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                    visible="false"
                >
                    <f:content>
                        <Label text="id" />
                        <Input id="idAdd" />

                        <Label text="cognome" />
                        <Input id="cognomeAdd" />

                        <Label text="nome" />
                        <Input id="nomeAdd" />

                       <Label text="ruoloo" />
                        <ActionSelect id="ruoloAdd" forceSelection="true" selectedKey="{path: 'ID_RUOLO'}" items="{
                                path: '/Anagrafica_Ruoli'}" visible="true" editable="true" width="30%">
                            <items>
                                <core:Item key="{'ID_RUOLO'}" text="{path: 'ID_RUOLO', formatter: '.formatter.idRuoloToString'}" />
                            </items>
                        </ActionSelect>

                        <Label text="email" />
                        <Input id="emailAdd" />

                        <Label text="telefono" />
                        <Input id="telefonoAdd" />
                    </f:content>
                </f:SimpleForm>
               
                <semantic:customFooterContent>
                    <OverflowToolbarButton icon="sap-icon://refresh" id="refreshAddBtn" press="refreshAdd" visible="false" />

                    <OverflowToolbarButton icon="sap-icon://refresh" id="refreshBtn" press="refresh" visible="false" />

                    <OverflowToolbarButton icon="sap-icon://save" id="saveAddQuitBtn" press="saveAddQuit" visible="false" />

                    <OverflowToolbarButton icon="sap-icon://add" id="saveAddAddBtn" press="saveAddAdd" visible="false" />

                    <OverflowToolbarButton icon="sap-icon://save" id="saveBtn" press="save" visible="false" />

                    <OverflowToolbarButton icon="sap-icon://edit" id="editBtn" press="edit" visible="true" />

                    <OverflowToolbarButton icon="sap-icon://delete" id="deleteBtn" press="delete" visible="false" />

                     <OverflowToolbarButton icon="sap-icon://undo" id="exitAddBtn" press="exitAdd" visible="false" />

                      <OverflowToolbarButton icon="sap-icon://undo" id="exitBtn" press="exit" visible="false" />

                    <!-- <OverflowToolbarButton icon="sap-icon://settings" text="Settings" press="onPress"/>
					<OverflowToolbarButton icon="sap-icon://video" text="Video" press="onPress"/> -->
                </semantic:customFooterContent>

                <!-- <semantic:customShareMenuContent>
					<Button text="CustomShareBtn1" icon="sap-icon://color-fill" press="onPress"/>
					<Button text="CustomShareBtn2" icon="sap-icon://crop" press="onPress"/>
				</semantic:customShareMenuContent> -->
            </semantic:DetailPage>
        </detailPages>
    </SplitContainer>
</mvc:View>